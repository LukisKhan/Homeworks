<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <header>
    <% if logged_in? %>
      <form action="<% session_url %>" method="POST">
        <input type="hidden"
        name="_method"
        value="DELETE">
        <button>Log out</button>
      </form>
      <%= current_user.user_name %>
    <% end %>
  </header>
    <%= yield %>
  </body>
</html>
