<h1>New User</h1>


<form action="<%= users_url %>" method="POST">
    <%= auth_token %>
    <label for="email">Email</label>
    <input type="text"
            name="user[email]"
            id="email"
            value="<%= @user.email %>">
    <br>
    <label for="user_password">Password</label>
    <input type="password"
         name="user[password]"
         id="user_password"
         value="<%= @user.password %>">
    <br>
  <input type="submit">
</form>

<% content_for :footer do %>
  This is where you create an account.
<% end %>