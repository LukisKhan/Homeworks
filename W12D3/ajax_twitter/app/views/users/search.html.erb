<h1>Search!</h1>

<nav class="users-search">
  <ul class="users"></ul>
  <input type="text" name="user" value="Enter user name">
</nav>

<ul>
  <% @users.each do |user| %>
    <li>
      <a href="<%= user_url(user) %>"><%= user.username %></a>
      <%= render 'follows/form', user: user %>
    </li>
  <% end %>
</ul>

